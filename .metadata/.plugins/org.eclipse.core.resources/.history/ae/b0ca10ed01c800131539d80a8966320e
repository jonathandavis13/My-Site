# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Jobs
GET     /jobs                     controllers.Jobs.blank()
POST    /jobs                     controllers.Jobs.submit()

# Contact
GET     /github                   controllers.GitHub.blank()
POST    /github                   controllers.GitHub.submit()

# Wizard
GET     /education              controllers.Education.step(step:Int)
POST    /education               controllers.Education.submit(step:Int)